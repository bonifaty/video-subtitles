.page
  max-width 1280px
  margin 40px auto 0
  padding 0 20px

.app
  position: relative
  padding-bottom: 50%;

  &__container
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    display: flex

  &__main
    flex-basis 70%
    flex-grow 1


  &__sidebar
    padding-left: 10px;
    flex-basis 30%
    flex-grow 1

*
  box-sizing border-box
