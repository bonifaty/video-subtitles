@import '../../shared/mixins.styl';

.comments-list
  height: 100%
  display: flex
  flex-direction column
  position: relative
  background-color #f7f7f7
  &__header
    padding 10px
    font(17px)
    background-color #88C057;
    color white

  &__list-container
    overflow auto

  &__header-actions
    float: right

    button
      background-color: transparent;
      border: 1px solid white;
      border-radius: 10px;
      color: white;
      padding: 3px 10px
      font(14px)
      cursor: pointer

      &:hover {
        background-color rgba(0,0,0,0.1)
      }

  &__item
    border-bottom: 1px solid #ccc;
    margin-top: 10px;

    &:first-child
      margin-top: 0

  &__time-range
    font(12px)
    padding 5px 10px
    /*background-color #47A0DB;
    color white*/

  &__comment-text
    font(14px, 400, 1.5)
    padding: 5px 10px

  &__add-new
    position: absolute
    visibility hidden
    opacity 0
    top: 0
    left: 0
    right: 0
    bottom: 0
    background-color rgba(0,0,0,0.4)

    &_visible
      visibility visible
      opacity 1
